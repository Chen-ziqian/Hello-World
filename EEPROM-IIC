#include <reg52.h>			 //此文件中定义了单片机的一些特殊功能寄存器
#include <i2c.h>	

typedef unsigned int unit16;	  //对数据类型进行声明定义
typedef unsigned char uchar8;

sbit LSA=P2^2;
sbit LSB=P2^3;
sbit LSC=P2^4;

sbit k1=P3^1;
sbit k2=P3^0;
sbit k3=P3^2;
sbit k4=P3^3;	 //定义按键端口

uchar8 num=0;
uchar8 disp[4];
uchar8 code smgduan[10]={0x3f,0x06,0x5b,0x4f,0x66,0x6d,0x7d,0x07,0x7f,0x6f}; //段选，0-9

/*******************************************************************************
* 函 数 名         : delay
* 函数功能		   : 延时函数，i=1时，大约延时10us
*******************************************************************************/
void delay(unit16 i)
{
	while(i--);	
}


/*******************************************************************************
* 函数名         :Keypros()
* 函数功能		 :按键处理函数
* 输入           : 无
* 输出         	 : 无
*******************************************************************************/
void Keypros()
{
	if(k1==0)
	{
		delay(1000);  //消抖处理
		if(k1==0)
		{
			At24c02Write(1,num);   //在地址1内写入数据num
		}
		while(!k1);
	}
	if(k2==0)
	{
		delay(1000);  //消抖处理
		if(k2==0)
		{
			num=At24c02Read(1);	  //读取EEPROM地址1内的数据保存在num中
		}
		while(!k2);
	}
	if(k3==0)
	{
		delay(1000);  //消抖处理
		if(k3==0)
		{
			num++;	   //数据加1
			if(num>255)
				num=0;
		}
		while(!k3);
	}
	if(k4==0)
	{
		delay(1000);  //消抖处理
		if(k4==0)
		{
			num=0;		 //数据清零
		}
		while(!k4);
	}		
}

/*******************************************************************************
* 函数名         :datapros()
* 函数功能		 :数据处理函数
* 输入           : 无
* 输出         	 : 无
*******************************************************************************/
void datapros()
{
	disp[0]=smgduan[num/1000];      	 //千位
	disp[1]=smgduan[num%1000/100];   	 //百位
	disp[2]=smgduan[num%1000%100/10];	 //十位
	disp[3]=smgduan[num%1000%100%10];	 //个位		
}


/*******************************************************************************
* 函数名         :DigDisplay()
* 函数功能		 :数码管显示函数
* 输入           : 无
* 输出         	 : 无
*******************************************************************************/
void DigDisplay()
{
	uchar8 i;
	for(i=0;i<4;i++)
	{
		switch(i)	                     //位选，选择点亮的数码管，
		{
			case(0):
				LSA=1;LSB=1;LSC=0; break;//显示第0位，查询真值表可知，点亮LED4，左5
			case(1):
				LSA=0;LSB=1;LSC=0; break;//显示第1位，点亮LED3，左6
			case(2):
				LSA=1;LSB=0;LSC=0; break;//显示第2位，点亮LED2，左7
			case(3):
				LSA=0;LSB=0;LSC=0; break;//显示第3位，点亮LED1，左8
		}
		P0=disp[i];          			 //发送段选，即选择显示数字几
		delay(100); 					 //间隔一段时间扫描，延时1ms	
		P0=0x00;						 //消隐
	}		
}

/*******************************************************************************
* 函 数 名       : main
* 函数功能		 : 主函数
* 输    入       : 无
* 输    出    	 : 无
*******************************************************************************/
void main()
{	
	while(1)
	{
		Keypros();					 //按键处理函数
		datapros();					 //数据处理函数
		DigDisplay();				 //数码管显示函数		
	}		
}
